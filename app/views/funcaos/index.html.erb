<h1>Listing funcaos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @funcaos.each do |funcao| %>
      <tr>
        <td><%= funcao.nome %></td>
        <td><%= link_to 'Show', funcao %></td>
        <td><%= link_to 'Edit', edit_funcao_path(funcao) %></td>
        <td><%= link_to 'Excluir', funcao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

